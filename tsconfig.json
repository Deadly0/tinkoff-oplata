{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "ES5",
      "ES6",
      "ES7"
    ],
    "baseUrl": ".",
    "rootDirs": [
      "src"
    ],
    "outDir": "./dist/"
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "typings",
    "dist",
    "test"
  ]
}