{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "rootDirs": [
      "src"
    ],
    "outDir": "./dist/"
  },

  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "typings",
    "dist",
    "test"
  ]
}